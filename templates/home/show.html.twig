{% extends 'base.html.twig' %}

{% block title %} Article {% endblock %}
{% block body %}
<style>
    
    .articles{
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,.25);
        padding: 16px 20px;
    }
    img{
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,.25);
        margin:10px;
    }

</style>
<h1>Page d'articles</h1>
<section class="articles mt-5">
<article class="mb-5">
    <h2>{{article.title}}</h2>
    <div class="metadata">
        Ecrit le {{ article.createdat | date('d-m-y')}} Ã  {{ article.createdat | date('H:i')}}
        <span class="badge bg-danger">
             {{ article.category.title}}
        </span>
    </div>
    <div class="content">
        <img src="{{ article.image}}">
        <p>{{ article.content}}</p>
        <a class="btn btn-info" href=" {{path('article_show', {'id' : article.id}) }}">more</a>
    </div>
</article>
</section>
{% endblock %}